<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar Profesores</title>
</head>
<body>
    <h1>Listado de Profesores</h1>
    <a href="/profesores/insertar">Agregar nuevo profesor</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>DNI</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Profesión</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% profesores.forEach(profesor => { %>
                <tr>
                    <td><%= profesor.id %></td>
                    <td><%= profesor.dni %></td>
                    <td><%= profesor.nombre %></td>
                    <td><%= profesor.apellido %></td>
                    <td><%= profesor.email %></td>
                    <td><%= profesor.profesion %></td>
                    <td><%= profesor.telefono %></td>
                    <td>
                        <a href="/profesores/editar/<%= profesor.id %>">Editar</a>
                        <a href="/profesores/eliminar/<%= profesor.id %>?_method=DELETE">Eliminar</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
