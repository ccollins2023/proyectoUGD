<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insertar Inscripción</title>
</head>
<body>
    <h1>Insertar Nueva Inscripción</h1>
    <form action="/inscripciones" method="POST">
        <label for="curso">Curso:</label>
        <select id="curso" name="curso_id" required>
            <% cursos.forEach(curso => { %>
                <option value="<%= curso.id %>"><%= curso.nombre %></option>
            <% }); %>
        </select>

        <label for="estudiante">Estudiante:</label>
        <select id="estudiante" name="estudiante_id" required>
            <% estudiantes.forEach(estudiante => { %>
                <option value="<%= estudiante.id %>"><%= estudiante.nombre %> <%= estudiante.apellido %></option>
            <% }); %>
        </select>

        <label for="nota">Nota:</label>
        <input type="number" id="nota" name="nota" min="1" max="10" required>

        <button type="submit">Guardar Inscripción</button>
    </form>
</body>
</html>
